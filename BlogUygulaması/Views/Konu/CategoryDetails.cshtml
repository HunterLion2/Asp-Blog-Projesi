<style>
    .category-head {
        font-family: "Ubuntu", sans-serif;
        font-weight: 500;
        font-style: normal;
    }

    .word-main-head {
        font-family: "Oswald", sans-serif;
        font-optical-sizing: auto;
        font-weight: 500;
        font-style: normal;
    }

    footer {
        position: fixed;
        bottom: 0px;
        left: 0px;
        width: 100%;
    }
</style>

@model List<WordModel>

<div class="container">
    <div class="category-head">
        <div class="mt-5">
            <div class="container">
                <h2>Konu : @ViewData["konuhead"]</h2>
                <hr>
                <div class="mt-3 container">
                    <div class="row p-2 rounded animate__animated " id="home-word">
                        @if (Model.Any())
                        {
                            @foreach (var yazılar in Model)
                            {
                                
                                <div class="col-md-2 mt-3">
                                    <img src="~/img/@yazılar.ResimDosyaAdi" alt="" width="100%" class="rounded">
                                </div>
                                <div class="col-md-8 mt-3">
                                    <a asp-controller="WordDetails" asp-action="Index" asp-route-id="@yazılar.Id"
                                        class="link-underline link-underline-opacity-0">
                                        <h3 class="word-main-head text-black">@yazılar.AnaBaşlık</h3>
                                    </a>
                                    <p class="word-main-paragraph text-black">@Html.Raw(yazılar.MiniAciklama)</p>
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <p class="text-white p-2" id="date">@yazılar.DateTime.ToShortDateString()</p>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <div class="contianer">
                                    <h5>Bu Kategori İle İlgili Bir Blog Bulunmamaktadır.</h5>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>