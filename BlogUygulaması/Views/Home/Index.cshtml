<style>
    .text {
        font-family: "Playwrite DK Loopet", cursive;
        font-size: 150px;
        color: #fff;
    }

    .letter {
        display: inline-block;
        opacity: 0;
    }

    #home {
        height: 90vh;
    }
</style>

<div id="home">
    <h1 class=" d-flex align-items-center justify-content-center text"
        style="height: 80vh; font-size: 65px; color: rgba(201, 201, 201, 0.8); ">Hello</h1>
</div>


<script src="https://cdn.jsdelivr.net/npm/animejs@3.2.1/lib/anime.min.js"></script>
<script>
    // Harfleri <span> ile sar
    const text = document.querySelector('.text');
    text.innerHTML = text.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

    // Anime.js ile animasyon
    anime.timeline({ loop: false })
        .add({
            targets: '.letter',
            opacity: [0, 1],
            scale: [0.5, 1],
            easing: "easeOutExpo",
            duration: 800,
            delay: (el, i) => 200 * i // Her harf için 200ms gecikme
        });
</script>

<div class="mt-5">
    <div class="container">
        <h2>Son Yazılar</h2>
        <hr>
        <div class="mt-2">
            <a asp-controller="WordDetails" asp-action="Index" class="form-control link-underline link-underline-opacity-0 ">
                <div class="row p-2 rounded" id="home-word">
                    <div class="col-md-3">
                        <img src="~/img/resim.jpg" alt="" width="75%" class="rounded">
                    </div>
                    <div class="col-md-7 p-3">
                        <h1 class="word-main-head d-flex align-items-center">İntel Ve Amd Arasındaki Savaş</h1>
                        <p class="word-main-paragraph">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ex ut
                            autem harum laborum eos in magni,
                            eius, cum saepe minus accusamus quia tenetur temporibus nulla...</p>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <p class="text-white p-2" id="date">18/05/2025</p>
                    </div>
                </div>
            </a>


        </div>

    </div>
</div>

<script src="~/js/site.js"></script>
