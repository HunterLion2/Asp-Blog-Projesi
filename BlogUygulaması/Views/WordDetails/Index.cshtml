@model WordModel

<div class="container mt-0">
    <div id="home-word">
        <div class="row p-4 rounded ">
            <div class="col-md-4">
                <img src="~/img/@Model.ResimDosyaAdi" alt="" width="100%" class="rounded">
            </div>
            <div class="col-md-8">
                <h1 class="word-main-head text-black">@Model.AnaBaşlık</h1>
                <p class="word-main-paragraph text-black">
                    @Model.Açıklama
                </p>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <div class="p-2">
                <a asp-controller="CreateWord" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Sil</a>
            </div>
            <div class="p-2">
                <p class="text-white p-2" id="date">@Model.DateTime.ToShortDateString()</p>
            </div>
        </div>

    </div>

</div>