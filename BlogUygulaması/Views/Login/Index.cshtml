@{
    Layout = "_LoginLayout";
}

<style>
    .login {
        background-color: rgb(233, 233, 233);
        border-radius: 15px;
        position: absolute;
        border: 1px solid black;
        top: 150px;
        width: 1250px;
        height: 627px;
        flex-shrink: 0;
    }

    h2 {
        font-family: "Roboto", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        font-variation-settings:
            "wdth" 100;
    }
</style>

@model AccountLoginModel

<div class="container">
    <div class="login p-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="mt-4">Kullanıcı Girişi</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-controller="Login" asp-action="Index" method="post">
                        <div class="mt-5">
                            <label class="fs-3 fw-bold" asp-for="Email">Email</label>
                            <input type="text" asp-for="Email" class="form-control">
                        </div>
                        <div class="mt-5">
                            <label class="fs-3 fw-bold" asp-for="Password">Password</label>
                            <input type="text" asp-for="Password" class="form-control">
                            <div class="mt-2">
                                <input type="checkbox" asp-for="BeniHatirla" class="mx-1" name="" id="">
                                <label asp-for="BeniHatirla" class="fs-6">Beni hatırla</label>
                            </div>
                            <div class="d-flex flex-row">
                                <button type="submit" class="btn btn-outline-primary mt-3">Giriş Yap</button>
                                <a asp-controller="Login" asp-action="Signin" class="mt-3 mx-1 btn btn-dark">Üye Ol</a>
                            </div>
                        </div>
                    </form>
            </div>
            <div class="col-md-6 p-4 ">
                <img src="~/img/loginx-1.svg" style="position: absolute;" alt="">
                <img src="~/img/loginx-2.svg" alt="">
            </div>
        </div>
    </div>
</div>
