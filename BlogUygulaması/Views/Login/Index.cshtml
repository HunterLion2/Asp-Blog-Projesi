@{
    Layout = "_LoginLayout";
}

<style>
    .login {
        background-color: rgb(233, 233, 233);
        border-radius: 15px;
        position: absolute;
        border: 1px solid black;
        top: 150px;
        width: 1250px;
        height: 627px;
        flex-shrink: 0;
    }

    h2 {
        font-family: "Roboto", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        font-variation-settings:
            "wdth" 100;
    }
</style>

<div class="container">
    <div class="login p-5">
        <div class="row">
            <div class="col-md-6">
                <h2>Kullanıcı Girişi</h2>
                <div class="mt-5">
                    <label class="fs-4 fw-bold" for="">Email</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mt-5">
                    <label class="fs-4 fw-bold" for="">Password</label>
                    <input type="text" class="form-control">
                    <div class="d-flex flex-row">
                        <a class="mt-3 btn btn-primary">Giriş Yap</a>
                        <a href="" class="mt-3 mx-1 btn btn-dark">Üye Ol</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 p-4">
                <svg style="position: absolute;" xmlns="http://www.w3.org/2000/svg" width="420" height="468" viewBox="0 0 468 450" fill="none">
                    
            </div>
        </div>
    </div>
</div>

