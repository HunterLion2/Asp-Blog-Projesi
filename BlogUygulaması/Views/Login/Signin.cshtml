@{
    Layout = "_LoginLayout";
}

<style>
    .login {
        background-color: rgb(233, 233, 233);
        border-radius: 15px;
        position: absolute;
        border: 1px solid black;
        top: 150px;
        width: 1250px;
        height: 627px;
        flex-shrink: 0;
    }

    h2 {
        font-family: "Roboto", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        font-variation-settings:
            "wdth" 100;
    }
</style>

<div class="container">
    <div class="login p-5">
        <a asp-controller="Login" asp-action="Index" class="btn btn-dark"><i class="fa-solid fa-arrow-left"></i></a>
        <div class="row">
            <div class="col-md-6">
                <h2 class="mt-4">Üye Ol</h2>
                <div class="mt-3">
                    <label class="fs-5 fw-bold" for="">Email</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mt-3">
                    <label class="fs-5 fw-bold" for="">Password</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mt-3">
                    <label class="fs-5 fw-bold" for="">Password Repeat</label>
                    <input type="text" class="form-control">
                </div>        
                <div class="mt-3">
                    <label class="fs-5 fw-bold" for="">Kullanıcı Adı</label>
                    <input type="text" class="form-control">
                    <div class="d-flex flex-row">
                        <a class="mt-3 btn btn-success">Kayıt Ol</a>
                    </div>
                </div>

            </div>
            <div class="col-md-6 p-4 ">
                <img src="~/img/loginx-1.svg" style="position: absolute;" alt="">
                <img src="~/img/loginx-2.svg" alt="">
            </div>
        </div>
    </div>
</div>
