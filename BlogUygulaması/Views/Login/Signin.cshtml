@{
    Layout = "_LoginLayout";
}

<style>
    .login {
        background-color: rgb(233, 233, 233);
        border-radius: 15px;
        position: absolute;
        border: 1px solid black;
        top: 150px;
        width: 1250px;
        height: 627px;
        flex-shrink: 0;
    }

    h2 {
        font-family: "Roboto", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        font-variation-settings:
            "wdth" 100;
    }
</style>

@model AppUserCreate

<div class="container">
    <div class="login p-5">
        <a asp-controller="Login" asp-action="Index" class="btn btn-dark"><i class="fa-solid fa-arrow-left"></i></a>
        <div class="row">
            <div class="col-md-6">
                <h2 class="mt-4">Üye Ol</h2>
                <form method="post" asp-controller="Login" asp-action="Signin">
                    <div asp-validation-summary="All"></div>
                    <div class="mt-3">
                        <label class="fs-5 fw-bold" asp-for="Email">Email</label>
                        <input type="text" asp-for="Email" class="form-control">
                    </div>
                    <div class="mt-3">
                        <label class="fs-5 fw-bold" asp-for="Password">Password</label>
                        <input type="password" asp-for="Password" class="form-control">
                    </div>
                    <div class="mt-3">
                        <label class="fs-5 fw-bold" asp-for="ConfirmPassword">Password Repeat</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control">
                    </div>        
                    <div class="mt-3">
                        <label class="fs-5 fw-bold" asp-for="AdSoyad">Kullanıcı Adı</label>
                        <input type="text" asp-for="AdSoyad" class="form-control">
                        
                    </div>
                    <div class="d-flex flex-row mt-2">
                        <button type="submit" class="btn btn-success">Kayıt Ol</button>
                    </div>                    
                </form>
            </div>
            <div class="col-md-6 p-4 ">
                <img src="~/img/loginx-1.svg" style="position: absolute;" alt="">
                <img src="~/img/loginx-2.svg" alt="">
            </div>
        </div>
    </div>
</div>
